/* Variables */
transparent_black = rgba(0,0,0,.3)
bitter_lemon = #E5F04C
sulu = #D1E751//#B1CF72
slim_black = 1px solid black
font_montserrat = 'Montserrat', sans-serif;
font_ubuntu = 'Ubuntu Condensed', sans-serif;
html
  margin 0px
  padding 0px
  width 100%
  height auto
  font-size 62.5%
  overflow-x hidden

body
  position relative
  margin 0px
  padding 0px
  width 100%
  height auto
  font-family font_montserrat
  overflow-x hidden

h1, h2, h3, h4, h5
  margin 0
  padding 0

.container
  width 100%
  font-size 1.6rem
  font-family font_ubuntu
/*
  The menu is fixed.
*/
nav
  position fixed
  width 100%
  height 6rem
  background-color #000
  z-index 1000
  line-height 6rem
  decoration none
  h1
    position absolute
    left 4rem
    color #fff
    font-size 2.2rem
    font-family font_montserrat
  img
    display none
  .menu
    position absolute
    right 10%
    font-size 2rem
    font-weight bold
  a
    display inline-block
    width 10rem
    height 6rem
    text-align center
    text-decoration none
    margin-left 2rem
    color #fff
  a:link
    color #fff
  a:hover
    background-color #fff
    color #000

/*
  Header image container is always 100% wide, but resizes
  horizontally.
*/
.img-container
  position relative
  width 100%
  max-height 60rem
  /* Add padding to account for the fixed menu height */
  padding-top 6rem
  /* Make image self crop */
  overflow hidden
  .heading
    position absolute
    width 100%
    height 100%
    bottom 0
    text-align center
    font-weight bold
    z-index 900
    color #fff
    background-color transparent_black;
    .heading-text
      position absolute
      width 95%
      height 20rem
      bottom 5%
      text-align center
      h3
        font-size 5rem
      p
        font-size 2.5rem
  .arrow
    width 10rem
    height 10rem
  .header-image
    width 100%
    min-height 30rem

/* 3 column grid */
.about
  font-size 5rem
  width 100%
  height auto
  min-height 60rem
  margin-top 10rem
  font-family: font_ubuntu
  .box-container
    width 100%
    height 100%
    background-color #fff
    .info-box
      display inline-block
      float left
      margin-left 0rem
      text-align center
      width 33%
      height 100%
      padding 0rem
      img
        width 25rem
        height 25rem
        border-radius 50%
      .description
        width 90%
        height 15rem
        margin 0 auto;
        position relative
        margin-top 5rem
        margin-bottom 2rem
        font-size 3.5rem
      .learn-more
        font-size 3rem
        width 30rem
        line-height 10rem
        height 10rem
        background-color sulu//#D1E751//#A7E82E
        margin 0 auto
        margin-bottom 10rem
.get-in-touch
  /* Clear floats from the top 3 elements */
  // clear both
  width 80%
  text-align center
  padding-top 5rem
  padding-bottom 5rem
  font-size 4rem
  margin 0 auto
  p
    font-size 2.2rem
hr.git
  width 100%
  height 1px
  background-color #18ACDD

/* Footer */
.contact
  width 100%
  height auto
  margin 0 auto
  padding-top 10rem
  .map
    display inline-block
    float left
    margin-left 15%
  .address
    display inline-block
    width 30rem
    float right
    margin-right 15%
  h2
    font-size 3.5rem
  p
    font-size 2.5rem
    opacity 0.7

/* Mobile version */

/* Move map and contact info close to the screen edges. */
@media(max-width 1500px)
  .contact
    .map
      margin-left 5%
    .address
      margin-left 5%

/*
  Move the info boxes to a row layout. Hide the map, there is no space for it */
@media(max-width 1200px)
  .about
    width inherit
    margin-top 5rem
    .box-container
      width inherit
      .info-box
        display block
        width 100%
        .description
          height 10rem
        .learn-more
          width 100%
          height 15rem
          line-height 15rem
  .contact
    padding-top 5rem
    .map
      display none
    .address
      display block
      float none
      text-align center
      margin 0 auto
      margin-bottom 5rem

/* Mobile style for the menu*/
@media(max-width 1000px)
  .hamburger
    display none
    position fixed
    padding-top 2rem
    right 0 !important
    width 100%
    height 35rem
    background-color black
    .hamburger-icon
      position absolute
      right 2rem
      height 8rem
      width 5rem
      display inline // reverses display:none
      background-color #fff
      width 10rem
    a
      display block
      margin 0 auto
      width 100%
      height 8rem
      line-height 8rem
      color #fff
    a:hover
     background-color white
     color #000
    a:link
      color #fff

/* Make images and buttons smaller on mobile phones */
@media(max-width 800px)
  .img-container
    .heading
      .heading-text
        h3
          font-size 4rem
    .arrow
      width 8rem
      height 8rem
  .about
    .box-container
      .info-box
        img
          width 20rem
          height 20rem
        .learn-more
          width 100%
          height 10rem
          line-height 10rem

/****************************************
Services page styles
****************************************/
table
  width 80%
  margin 0 auto
  margin-top 5rem
  margin-bottom 8rem
  border slim_black
  padding 2rem
  font-size 1.8rem
  tr
    width 100%
    height 5rem
  th
    border-bottom slim_black
    background-color #fff
    font-size 3rem
    padding-bottom 2rem
  td
    padding 2rem
    border-bottom slim_black
  tr:nth-child(odd)
    background-color sulu
